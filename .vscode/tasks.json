{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run ASM",
            "type": "shell",
            "command": "make",
            "args": [
                "run",
                "TARGET=${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "options": {
                "shell": {
                    "executable": "/bin/sh",
                    "args": ["-c"]
                },
                "env": {
                    "TARGET": "${fileBasenameNoExtension}"
                }
            }
        }
    ]
}
